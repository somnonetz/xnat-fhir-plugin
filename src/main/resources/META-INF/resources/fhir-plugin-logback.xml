<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender class="ch.qos.logback.core.rolling.RollingFileAppender" name="fhirplugin">
        <append>false</append>
        <file>${xnat.home}/logs/fhirplugin.log</file>
        <encoder>
            <pattern>%d [%t] %-5p %c - %m%n</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${xnat.home}/logs/fhirplugin.log.%d{yyyy-MM-dd}</fileNamePattern>
        </rollingPolicy>
    </appender>
    <logger additivity="false" level="INFO" name="de.htwberlin.cbmi.fhir">
        <appender-ref ref="fhirplugin"/>
    </logger>
</configuration>

