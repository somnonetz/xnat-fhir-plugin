<div class="form_block">
    <div class="row">
        <input type="button" name="add-coding" value="Add Coding" onclick="addRow(this, 'codeable_concept_form')" /></td>
    </div>
    <div class="row" style="display: none" data-base="$formbase" data-label="codeable_concept_form">
        <div class="delete_item">
            <a style="color: red">
                <i class="fa fa-trash-o" title="Delete" onclick="deleteRow(this, 'codeable_concept_form')"></i>
            </a>
        </div>
        <div class="delete_item_content">
            <div class="row">
                <div class="key">
                    #formLabel("Coding system")
                </div>
                <div class="value">
                    <input type="url" name="system" placeholder="Identity of the terminology system">
                </div>
            </div>

            <div class="row">
                <div class="key">
                    #formLabel("Coding Version")
                </div>
                <div class="value">
                    #xdatStringBox("version" $item "Version of the system" $vr)
                </div>
            </div>

            <div class="row">
                <div class="key">
                    #formLabel("Code")
                </div>
                <div class="value">
                    #xdatStringBox("code" $item "Symbol in syntax" $vr)
                </div>
            </div>

            <div class="row">
                <div class="key">
                    #formLabel("Display")
                </div>
                <div class="value">
                    #xdatStringBox("display" $item "Representation" $vr)
                </div>
            </div>

            <div class="row">
                <div class="key">
                    #formLabel("Selected user")
                </div>
                <div class="value">
                    #xdatBooleanRadioYesNo("userSelected" $item $defaultValue $vr)
                </div>
            </div>

        </div>
    </div>
    <div class="row">
        <div class="row">
            <div class="key">
                #formLabel("Text")
            </div>
            <div class="value">
                #xdatStringBox("text" $item "Plain text representation of the concept" $vr)
            </div>
        </div>
    </div>
</div>